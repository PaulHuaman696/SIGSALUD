<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Especialidades</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/css/styles.css" />
  <style>
    .container {
      max-width: 480px;
      margin: 20px auto;
      padding: 15px;
    }
    .search-bar {
      width: 100%;
      padding: 12px 15px;
      font-size: 1rem;
      border-radius: 8px;
      border: 1.8px solid #ccc;
      margin-bottom: 20px;
      outline: none;
      transition: border-color 0.3s ease;
    }
    .search-bar:focus {
      border-color: #4bb2a7;
    }
    .specialties-list {
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
      justify-content: center;
    }
    .specialty-card {
      background-color: white;
      border-radius: 12px;
      padding: 20px;
      flex: 1 1 45%;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      cursor: pointer;
      text-align: center;
      font-weight: 600;
      color: #00345b;
      transition: background-color 0.3s ease;
      user-select: none;
    }
    .specialty-card:hover {
      background-color: #4bb2a7;
      color: white;
    }
  </style>
</head>
<body>
  <div class="container">
    <input type="text" id="searchEspecialidad" class="search-bar" placeholder="Buscar especialidad..." onkeyup="filtrarEspecialidades()" />
    <div class="specialties-list" id="listaEspecialidades">
      <div class="specialty-card" onclick="location.href='/doctores/cardiologia'">Cardiología</div>
      <div class="specialty-card" onclick="location.href='/doctores/medicina-general'">Medicina General</div>
      <div class="specialty-card" onclick="location.href='/doctores/neumologia'">Neumología</div>
      <div class="specialty-card" onclick="location.href='/doctores/pediatria'">Pediatría</div>
      <div class="specialty-card" onclick="location.href='/doctores/dermatologia'">Dermatología</div>
      <!-- Añade más especialidades -->
    </div>
  </div>

  <script>
    function filtrarEspecialidades() {
      const input = document.getElementById('searchEspecialidad');
      const filter = input.value.toLowerCase();
      const cards = document.querySelectorAll('.specialty-card');
      cards.forEach(card => {
        const text = card.textContent.toLowerCase();
        card.style.display = text.includes(filter) ? 'block' : 'none';
      });
    }
  </script>
</body>
</html>
